<Window x:Class="ImageOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageOverlay"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Topmost="True" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" Opacity="0.5">
    <!-- ^ Inspired by: https://stackoverflow.com/questions/58824122/how-can-i-make-an-overlay-window-that-allows-mouse-clicks-to-pass-through-to-w -->
    <Grid>
        <Image x:Name="_imageControl"/>
    </Grid>
</Window>
